<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background"
              android:orientation="vertical"
              tools:context="com.nibonn.helloandroid.app.MainActivity">

    <LinearLayout
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/load"
        android:orientation="vertical"/>

    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/label_bg"
            android:padding="10dp"
            android:text="用户名"
            android:textColor="#ffffff"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="26dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="密码"
            android:textColor="#ffffff"
            android:textSize="25dp"
            />

        <EditText
            android:id="@+id/unLoginView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/textView5"
            android:background="@drawable/input_bg"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="33dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/signUpBtn"
            android:background="@drawable/button_bg"
            android:onClick="onClick"
            android:text="登陆"
            android:textColor="#ffffff"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/signUpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/loginBtn"
            android:layout_alignRight="@+id/unLoginView"
            android:layout_alignTop="@+id/loginBtn"
            android:background="@drawable/button_bg"
            android:onClick="onClick"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/pwLoginView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignEnd="@+id/unLoginView"
            android:layout_alignLeft="@+id/unLoginView"
            android:layout_alignRight="@+id/unLoginView"
            android:layout_alignStart="@+id/unLoginView"
            android:layout_alignTop="@+id/textView6"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="25dp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/car_img"/>

    </RelativeLayout>

</LinearLayout>
