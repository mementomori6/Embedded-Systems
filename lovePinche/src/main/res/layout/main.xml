<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.nibonn.lovepinche.MainActivity">

    <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:id="@+id/user_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi//username"
                    android:textColor="#ffffff"
                    android:textSize="20sp"/>

            <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#b6fff1">
            </TabWidget>

            <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_above="@android:id/tabs"
                    android:layout_marginBottom="5dp">

                <RelativeLayout
                        android:id="@+id/frequent_address_tab"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                            android:id="@+id/returnFrequentAddressBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="#0092ff"
                            android:onClick="onClick"
                            android:text="返回"
                            android:textColor="#ffffff"/>

                    <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/addFrequentAddressBtn"
                            android:layout_below="@+id/returnFrequentAddressBtn"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp">

                        <LinearLayout
                                android:id="@+id/frequent_address_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                        </LinearLayout>
                    </ScrollView>


                    <Button
                            android:id="@+id/addFrequentAddressBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/chat_title_bg"
                            android:onClick="onClick"
                            android:text="新增常用地址"
                            android:textColor="#ffffff"/>
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/chat_tab"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                            android:id="@+id/returnChatBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="#0092ff"
                            android:onClick="onClick"
                            android:text="返回"
                            android:textColor="#ffffff"/>

                    <TextView
                            android:id="@+id/chatTitleTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/returnChatBtn"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/chat_title_bg"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="talking with"
                            android:textColor="#ffffff"
                            android:textSize="20sp"/>

                    <ImageButton
                            android:id="@+id/sendMesBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="#000000"
                            android:onClick="onClick"
                            android:src="@drawable/send_msg"/>

                    <EditText
                            android:id="@+id/toSendMsgView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignTop="@+id/sendMesBtn"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/sendMesBtn"
                            android:background="@drawable/input_bg"/>

                    <ScrollView
                            android:id="@+id/scrollView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/sendMesBtn"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/chatTitleTextView"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/input_bg">

                        <TextView
                                android:id="@+id/chatContentTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="content"/>
                    </ScrollView>

                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/find_car_tab"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/textView4"
                            android:layout_alignRight="@+id/textView4"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/label_bg_main"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="出发地"
                            android:textSize="15sp"/>

                    <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/textView"
                            android:layout_marginTop="45dp"
                            android:background="@drawable/label_bg_main"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="目的地"
                            android:textSize="15sp"/>

                    <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/textView2"
                            android:layout_marginTop="45dp"
                            android:background="@drawable/label_bg_main"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:singleLine="false"
                            android:text="时间段"
                            android:textSize="15sp"/>

                    <EditText
                            android:id="@+id/startAddressView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textView"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/textView"
                            android:layout_marginLeft="26dp"
                            android:layout_toRightOf="@+id/textView"
                            android:background="@drawable/input_bg"/>

                    <EditText
                            android:id="@+id/arriveAddressView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/textView3"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignStart="@+id/startAddressView"
                            android:layout_alignTop="@+id/textView2"
                            android:background="@drawable/input_bg"/>

                    <Button
                            android:id="@+id/frequentStartAddressBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/arriveAddressView"
                            android:layout_below="@+id/startAddressView"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/alpha_button_bg"
                            android:onClick="onClick"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="常用地址"
                            android:textSize="15sp"
                            />

                    <!--
                    <Button
                            android:id="@+id/startAddressLocateBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/frequentStartAddressBtn"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/frequentStartAddressBtn"
                            android:background="@drawable/alpha_button_bg"
                            android:onClick="onClick"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="手机定位"
                            android:textSize="15sp"/>
                    -->

                    <EditText
                            android:id="@+id/beginDateView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textView3"
                            android:layout_alignEnd="@+id/frequentStartAddressBtn"
                            android:layout_alignLeft="@+id/arriveAddressView"
                            android:layout_alignRight="@+id/frequentStartAddressBtn"
                            android:layout_alignStart="@+id/arriveAddressView"
                            android:layout_alignTop="@+id/textView3"
                            android:background="@drawable/input_bg"
                            android:ems="10"
                            android:hint="XXXX-XX-XX"
                            android:inputType="date"/>

                    <Button
                            android:id="@+id/frequentArriveAddressBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/beginDateView"
                            android:layout_alignEnd="@+id/frequentStartAddressBtn"
                            android:layout_alignLeft="@+id/frequentStartAddressBtn"
                            android:layout_alignRight="@+id/frequentStartAddressBtn"
                            android:layout_alignStart="@+id/frequentStartAddressBtn"
                            android:layout_below="@+id/arriveAddressView"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/alpha_button_bg"
                            android:onClick="onClick"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="常用地址"
                            android:textSize="15sp"/>

                    <!--
                    <Button
                            android:id="@+id/arriveAddressLocateBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/frequentArriveAddressBtn"
                            android:layout_alignLeft="@+id/startAddressLocateBtn"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignStart="@+id/startAddressLocateBtn"
                            android:layout_alignTop="@+id/frequentArriveAddressBtn"
                            android:background="@drawable/alpha_button_bg"
                            android:onClick="onClick"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="手机定位"
                            android:textSize="15sp"/>
                    -->

                    <EditText
                            android:id="@+id/beginTimeView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/beginDateView"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/frequentArriveAddressBtn"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/beginDateView"
                            android:background="@drawable/input_bg"
                            android:ems="10"
                            android:hint="XX:XX:XX"
                            android:inputType="time"/>

                    <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/textView3"
                            android:layout_alignRight="@+id/textView3"
                            android:layout_below="@+id/textView3"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="~"
                            android:textSize="15sp"/>

                    <EditText
                            android:id="@+id/endDateView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textView4"
                            android:layout_alignLeft="@+id/beginDateView"
                            android:layout_alignStart="@+id/beginDateView"
                            android:layout_alignTop="@+id/textView4"
                            android:layout_toLeftOf="@+id/beginTimeView"
                            android:background="@drawable/input_bg"
                            android:ems="10"
                            android:hint="XXXX-XX-XX"
                            android:inputType="date"/>

                    <EditText
                            android:id="@+id/endTimeView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/endDateView"
                            android:layout_alignLeft="@+id/beginTimeView"
                            android:layout_alignStart="@+id/beginTimeView"
                            android:layout_alignTop="@+id/endDateView"
                            android:background="@drawable/input_bg"
                            android:ems="10"
                            android:hint="XX:XX:XX"
                            android:inputType="time"/>

                    <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/textView4"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/label_bg_main"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="我和我的小伙伴共"
                            android:textSize="15sp"/>

                    <RadioGroup
                            android:id="@+id/manRadioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_above="@+id/resetAllBtn"
                            android:layout_alignTop="@+id/textView6"
                            android:layout_toLeftOf="@+id/textView6"
                            android:layout_toRightOf="@+id/textView5"
                            android:gravity="center"
                            android:orientation="horizontal">

                        <RadioButton
                                android:id="@+id/oneManRadioBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="1"/>

                        <RadioButton
                                android:id="@+id/twoManRadioBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"/>

                        <RadioButton
                                android:id="@+id/threeManRadioBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"/>
                    </RadioGroup>

                    <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/textView5"
                            android:background="@drawable/label_bg_main"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:singleLine="false"
                            android:text="人"/>

                    <Button
                            android:id="@+id/resetAllBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/textView5"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/label_bg_main"
                            android:onClick="onClick"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="全部重置"/>

                    <Button
                            android:id="@+id/submitBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/resetAllBtn"
                            android:layout_marginRight="15dp"
                            android:layout_toLeftOf="@+id/resetAllBtn"
                            android:background="@drawable/label_bg_main"
                            android:onClick="onClick"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="提交请求"/>

                </RelativeLayout>

                <ScrollView
                        android:id="@+id/scroll_record_tab"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="30dp">

                    <LinearLayout
                            android:id="@+id/record_tab"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                    </LinearLayout>
                </ScrollView>

                <RelativeLayout
                        android:id="@+id/setting_tab"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                    <Button
                            android:id="@+id/changePWBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/label_bg_main"
                            android:onClick="onClick"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="修改登录密码"/>

                    <Button
                            android:id="@+id/changeInformationBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/changePWBtn"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/label_bg_main"
                            android:onClick="onClick"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="修改个人信息"/>

                    <Button
                            android:id="@+id/frequentAddressSettingBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/changeInformationBtn"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/label_bg_main"
                            android:onClick="onClick"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="常用地址设置"/>

                    <Button
                            android:id="@+id/exitSettingBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/frequentAddressSettingBtn"
                            android:layout_alignLeft="@+id/frequentAddressSettingBtn"
                            android:layout_alignParentBottom="true"
                            android:layout_alignRight="@+id/frequentAddressSettingBtn"
                            android:layout_alignStart="@+id/frequentAddressSettingBtn"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/status_fail"
                            android:onClick="onClick"
                            android:text="退出帐号"/>
                </RelativeLayout>

            </FrameLayout>
        </RelativeLayout>
    </TabHost>
</RelativeLayout>
